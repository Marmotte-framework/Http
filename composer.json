{
    "name": "marmotte/http",
    "description": "HTTP specification for Marmotte framework",
    "type": "marmotte-brick",
    "keywords": [
        "marmotte",
        "framework",
        "http"
    ],
    "homepage": "https://github.com/Marmotte-framework/Http",
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Traini",
            "email": "kevin@ktraini.com"
        }
    ],
    "funding": [
        {
            "type": "patreon",
            "url": "https://www.patreon.com/gashmob"
        }
    ],
    "require": {
        "php": ">=8.1",
        "marmotte/brick": "^1.1",
        "psr/http-message": "^2.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "vimeo/psalm": "^5.8",
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Marmotte\\Http\\": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Marmotte\\Http\\": "tests/"
        }
    },
    "scripts": {
        "psalm": "psalm",
        "test": "phpunit tests"
    }
}
